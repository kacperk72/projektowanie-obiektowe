{# templates/category/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Lista Kategorii{% endblock %}

{% block body %}
<h2>Lista Kategorii</h2>

<table>
    <tr>
        <th>ID</th>
        <th>Nazwa</th>
        <th>Akcje</th>
    </tr>
    {% for category in categories %}
        <tr>
            <td>{{ category.id }}</td>
            <td>{{ category.name }}</td>
            <td>
                <a href="{{ path('category_show', {'id': category.id}) }}">Pokaż</a>
                <a href="{{ path('category_edit', {'id': category.id}) }}">Edytuj</a>
            </td>
        </tr>
    {% endfor %}
</table>

<a href="{{ path('category_new') }}">Dodaj nową kategorię</a>
{% endblock %}
