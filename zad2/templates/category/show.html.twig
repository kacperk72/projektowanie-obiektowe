{# templates/category/show.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Szczegóły Kategorii{% endblock %}

{% block body %}
<h2>Szczegóły Kategorii</h2>

<table>
    <tr>
        <th>ID</th>
        <td>{{ category.id }}</td>
    </tr>
    <tr>
        <th>Nazwa</th>
        <td>{{ category.name }}</td>
    </tr>
</table>

<a href="{{ path('app_category') }}">Powrót do listy</a>
<a href="{{ path('category_edit', {'id': category.id}) }}">Edytuj</a>

<form method="post" action="{{ path('category_delete', {'id': category.id}) }}" onsubmit="return confirm('Czy na pewno chcesz usunąć tę kategorię?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
    <button type="submit">Usuń</button>
</form>
{% endblock %}
